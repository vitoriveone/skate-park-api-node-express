            <th scope="col">Editar</th>
          </tr>
        </thead>
        <tbody>
          {{#each skaters}}
    <tr>
      <th scope="row">{{incrementIndex @index}}</th>
      <td><img src="{{url}}/img/avatar/{{this.foto}}" alt="" class="rounded avatar"></td>
      <td>{{this.nombre}}</td>
      <td>{{this.anos_experiencia}}</td>
      <td>{{this.especialidad}}</td>
      {{#if this.estado}}
      <td><input class="form-check-input" type="checkbox" checked id="chkStatus-{{this.id}}" data-id="{{this.id}}"/></td>
      {{else}}
      <td><input class="form-check-input" type="checkbox" id="chkStatus-{{this.id}}" data-id="{{this.id}}" /></td>
      {{/if}}
      <td><button class="btn btn-danger" id="edtSkt-{{this.id}}" data-id="{{this.id}}" >Editar</button></td>
    </tr>
            
     {{/each}}
        </tbody>
      </table>